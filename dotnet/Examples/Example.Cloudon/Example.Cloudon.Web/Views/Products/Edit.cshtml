@model ProductDto;

@{
	ViewData["Title"] = "Index";
}


<form method="post" asp-action="Edit" enctype="multipart/form-data">

	<div class="row px-2 mx-2 backgroundWhite border">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="col-12 p-3">
			<h2 id="title" class="text-primary">Περιμένετε...</h2>
		</div>
		<div class="col-8">
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="Name"></label>
				</div>
				<div class="col-8">
					<input asp-for="Name" class="form-control"/>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
			</div>
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="Description"></label>
					</div>
					<div class="col-8">
						<textarea asp-for="Description" class="form-control"></textarea>
						<span asp-validation-for="Description" class="text-danger"></span>
					</div>
				</div>

			<div class="form-group row">
				<div class="col-4">
					<label asp-for="Barcode"></label>
				</div>
				<div class="col-8">
					<input asp-for="Barcode" class="form-control"/>
					<span asp-validation-for="Barcode" class="text-danger"></span>
				</div>
			</div>

			<div class="form-group row">
				<div class="col-4">
					<label asp-for="Code"></label>
				</div>
				<div class="col-8">
					<input asp-for="Code" class="form-control"/>
					<span asp-validation-for="Code" class="text-danger"></span>
				</div>
			</div>

			<div class="form-group row">
				<div class="col-4">
					<label asp-for="ExternalId"></label>
				</div>
				<div class="col-8">
					<input asp-for="ExternalId" class="form-control"/>
					<span asp-validation-for="ExternalId" class="text-danger"></span>
				</div>
			</div>

			<div class="form-group row">
				<div class="col-4">
					<label asp-for="WholesalePrice"></label>
				</div>
				<div class="col-8">
					<input asp-for="WholesalePrice" class="form-control"/>
					<span asp-validation-for="WholesalePrice" class="text-danger"></span>
				</div>
			</div>

			<div class="form-group row">
				<div class="col-4">
					<label asp-for="RetailPrice"></label>
				</div>
				<div class="col-8">
					<input asp-for="RetailPrice" class="form-control"/>
					<span asp-validation-for="RetailPrice" class="text-danger"></span>
				</div>
			</div>

			<div class="form-group row">
				<div class="col-4">
					<label asp-for="Discount"></label>
				</div>
				<div class="col-8">
					<input asp-for="Discount" class="form-control"/>
					<span asp-validation-for="Discount" class="text-danger"></span>
				</div>
			</div>


			<div class="form-group row">
				<div class="col-6 offset-3">
					<a style="cursor: pointer" id="createOrUpdateButton" class="btn btn-primary text-white form-control">
						Δημιουργία
					</a>
				</div>
				<div class="col-3">
					<a asp-action="Index" class="btn btn-success form-control">Πίσω</a>
				</div>
			</div>
		</div>
	</div>
</form>

@section scripts{
	<script src="/js/product.js" defer></script>
}